{
  "version": 2,
  "name": "smart-traffic-management",
  "builds": [
    {
      "src": "dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/simulation-data",
      "dest": "/api/simulation-data.py"
    },
    {
      "src": "/api/cv-vehicle-data", 
      "dest": "/api/cv-vehicle-data.py"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|ico|svg))",
      "dest": "/dashboard/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dashboard/build/index.html"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://smart-traffic-management.vercel.app/api",
      "REACT_APP_SOCKET_URL": "https://smart-traffic-management.vercel.app"
    }
  }
}